  <script>
    // NOTE: replace with your phone number in international format without +, e.g. 994501234567
    const PHONE_NUMBER = '994559697714'; // <-- DEYİŞDİRİN

    document.getElementById('year').textContent = new Date().getFullYear();

    // WhatsApp button - quick message
  function whatsappLink(text){
  return 'https://wa.me/' + PHONE_NUMBER + '?text=' + text;
}

    document.getElementById('waBtn').addEventListener('click', function(e){
      e.preventDefault();
      const txt = 'Salam, mən kredit ilə maraqlanıram.';
      window.open(whatsappLink(txt), '_blank');
    });

    // Calculator
    function calcMonthly(P, months, annualRate){
      const r = annualRate / 100 / 12; // aylıq faiz dərəcəsi
      if (r === 0) return P / months;
      const monthly = (P * r) / (1 - Math.pow(1 + r, -months));
      return monthly;
    }

    function showMonthly(){
      const P = parseFloat(document.getElementById('amount').value) || 0;
      const months = parseInt(document.getElementById('months').value) || 1;
      const rate = parseFloat(document.getElementById('rate').value) || 0;
      const m = calcMonthly(P, months, rate);
      document.getElementById('monthly').textContent = m ? m.toFixed(2) + ' AZN' : '—';
    }
    document.getElementById('calcBtn').addEventListener('click', showMonthly);
    showMonthly();

    // Lead form -> open WhatsApp with prefilled message
    function submitLead(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const amount = document.getElementById('reqAmount').value.trim();
      const msg = document.getElementById('message').value.trim();

      const full = `Yeni müraciət:%0AAd: ${name}%0ATelefon: ${phone}%0Aİstənilən məbləğ: ${amount}%0AMesaj: ${msg}`;
      window.open(whatsappLink(full), '_blank');
      return false;
    }

    function clearForm(){
      document.getElementById('name').value='';
      document.getElementById('phone').value='';
      document.getElementById('reqAmount').value='';
      document.getElementById('message').value='Salam, mən kreditlə maraqlanıram. Zəhmət olmasa kömək edin.';
    }
  </script>
